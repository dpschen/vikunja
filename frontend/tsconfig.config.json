{
  "extends": [
    "@tsconfig/node22/tsconfig.json",
    "@vue/tsconfig/tsconfig.json"
  ],
  "include": [
    "env.config.d.ts",
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "vite/plugins/tailwind-merge/index.ts",
    "vite/plugins/tailwind-merge/helper.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.config.tsbuildinfo",

    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"]
  }
}